# ==============================================================================
# 学習支援アプリ「知的な伴走者」環境変数設定
# ==============================================================================
# このファイルを .env にコピーして、各値を適切に設定してください
# 本番環境では必ず強固なパスワードとキーを使用してください

# ==============================================================================
# 基本設定
# ==============================================================================

# Django設定
DEBUG=True
SECRET_KEY=your-very-secret-key-change-this-in-production-minimum-50-characters-required
DJANGO_SETTINGS_MODULE=config.settings

# 許可されたホスト (カンマ区切り)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# ==============================================================================
# データベース設定
# ==============================================================================

# PostgreSQL (推奨)
DB_NAME=learning_companion
DB_USER=postgres
DB_PASSWORD=your-strong-password
DB_HOST=localhost
DB_PORT=5432

# SQLite使用フラグ (開発時のみ)
USE_SQLITE=False

# ==============================================================================
# Redis / キャッシュ設定
# ==============================================================================

# Redis URL
REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# Celery設定（非同期タスク処理）
# ==============================================================================

# Celery Broker & Result Backend
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ==============================================================================
# 国際化設定
# ==============================================================================

# 言語・タイムゾーン
LANGUAGE_CODE=ja
TIME_ZONE=Asia/Tokyo

# ==============================================================================
# CORS設定（フロントエンド連携）
# ==============================================================================

# CORS許可オリジン (カンマ区切り)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# メール設定
# ==============================================================================

# 開発環境（コンソール出力）
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# 本番環境（SendGrid使用時）
# EMAIL_BACKEND=anymail.backends.sendgrid.EmailBackend
# SENDGRID_API_KEY=your-sendgrid-api-key

# デフォルト送信者
DEFAULT_FROM_EMAIL=noreply@learning-companion.com

# ==============================================================================
# 認証・セキュリティ設定
# ==============================================================================

# JWT設定（必要に応じて調整）
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# ==============================================================================
# 外部サービス設定
# ==============================================================================

# Sentry（エラー監視）
SENTRY_DSN=

# Twilio（SMS通知）
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# ==============================================================================
# 学習支援アプリ固有設定
# ==============================================================================

# 機能制限
MAX_GOALS_PER_USER=50
MAX_TICKETS_PER_GOAL=100

# 学習設定
DEFAULT_STUDY_SESSION_DURATION=25

# システム設定
NOTIFICATION_BATCH_SIZE=100
ANALYTICS_RETENTION_DAYS=365

# 機能有効化フラグ
ENABLE_GAMIFICATION=True
ENABLE_TEACHER_SUPPORT=True

# ==============================================================================
# 開発環境専用設定
# ==============================================================================

# デバッグツール
DJANGO_DEBUG_TOOLBAR=True
DJANGO_SILK=True

# ==============================================================================
# 本番環境専用設定
# ==============================================================================

# SSL/セキュリティ設定（本番環境でのみ有効）
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000

# データベース接続プール（本番環境推奨）
# DB_CONN_MAX_AGE=600

# ==============================================================================
# AWS設定（S3ストレージ使用時）
# ==============================================================================

# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=

# ==============================================================================
# 機械学習・AI設定（将来機能用）
# ==============================================================================

# OpenAI API（GPT使用時）
# OPENAI_API_KEY=

# Google Cloud（翻訳・音声認識使用時）
# GOOGLE_CLOUD_PROJECT_ID=
# GOOGLE_APPLICATION_CREDENTIALS=

# ==============================================================================
# 監視・分析設定
# ==============================================================================

# Google Analytics
# GA_TRACKING_ID=

# Mixpanel
# MIXPANEL_TOKEN=

# ==============================================================================
# 注意事項
# ==============================================================================
# 1. このファイルは .env.example として保存し、実際の設定は .env ファイルに記述
# 2. .env ファイルは .gitignore に含めてバージョン管理に含めない
# 3. 本番環境では必ず強固なパスワードとキーを使用
# 4. 定期的にシークレットキーとパスワードを更新
# 5. 不要なサービスの設定は削除またはコメントアウト
